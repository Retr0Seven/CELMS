{
  "name": "celms",
  "version": "1.0.0",
  "description": "Campus Equipment Loan Management System",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd celms-api && npm start",
    "client": "cd celms-client && npm start",
    "server:dev": "cd celms-api && npm run dev",
    "install:all": "npm install && cd celms-api && npm install && cd ../celms-client && npm install",
    "build": "cd celms-client && npm run build"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  }
}